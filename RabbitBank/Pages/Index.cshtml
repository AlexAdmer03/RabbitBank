@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Masthead-->
<header class="masthead">
    <div class="container">
        <div class="masthead-subheading">Welcome To Our System!</div>
        <div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
        <a class="btn btn-primary btn-xl text-uppercase" href="#services">Get Started</a>
    </div>
</header>


<!-- Portfolio Grid-->
<section class="page-section" id="portfolio">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Scandinavian Insight</h2>
            <h3 class="section-subheading">See our full reach all around Scandinavia</h3>
        </div>
        <div class="row">
            @foreach (var country in Model.DataFromCountriesTotal)
            {
                <div class="col-lg-3 col-sm-6 mb-4">
                    <div class="portfolio-item">
                        <a class="portfolio-link" asp-page="/ShowCountries/@(country.Country)Details">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    @*     <h6 class="country-details">Customers: @country.TotalCustomers</h6>   *@
                                    <h6 class="country-details">Accounts <i class="fa-solid fa-users"></i> : @country.TotalAccounts</h6>
                                    <h6 class="country-details">Capital <i class="fa-solid fa-money-bill-wave"></i> : @country.TotalBalance.ToString("C")</h6>
                                    <h5 class="hover-row">Click to show details</h5>
                                </div>
                            </div>
                            <img class="img-fluid" src="assets/img/portfolio/@(country.Country.ToLower()).png" alt="@country.Country" />
                        </a>
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading">@country.Country.ToUpper()</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
