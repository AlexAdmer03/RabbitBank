@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="sv-se">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="EPN Sverige AB">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/assets/img/navy-bg.jpg">
    <link rel="stylesheet" href="~/assets/img/DALL·E 2023-03-30 11.12.25 - add these flags in a bank enviorment. 3D .png">
    <title>Rabbit.bank-login</title>
</head>

<body>
    <div class="container-fluid" id="container-fluid2">
        <div class="row" id="row2">
            <div class="col-md-6 d-none d-md-flex bg-custom-left"></div>
            <div class="col-md-6 bg-dark bg-custom-right">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-10 col-xl-7 mx-auto">
                                <h3 class="display-4">Log In</h3>
                                <p class="title-2">Welcome back to the system, proceed with your Email and Password</p>
                                <form asp-page="/Account/Login" method="post">
                                    <input type="hidden" asp-antiforgery="true" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group mb-3">
                                        <input asp-for="Input.Email" id="inputEmail" type="email" placeholder="Email" required="" autofocus=""
                                               class="form-control rounded-pill border-0 shadow-sm px-4">
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <input asp-for="Input.Password" id="inputPassword" type="password" placeholder="Password" required=""
                                               class="form-control rounded-pill border-0 shadow-sm px-4 text-primary">
                                        <label asp-for="Input.Password" class="form-label"></label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <button class="login-btn" id="login-submit" type="submit">
                                        Log in
                                        <div class="arrow-wrapper">
                                            <div class="arrow"></div>
                                        </div>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div><!-- End -->
            </div>
        </div><!-- End -->
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
<script src="~/js/script.js"></script>
</body>


</html>

